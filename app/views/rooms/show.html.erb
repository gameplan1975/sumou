<p id="notice"><%= notice %></p>

<h1>閲覧</h1>
<p>
  <strong>物件名：</strong>
  <%= @room.name %>
</p>
<p>
  <strong>賃料：</strong>
  <%= @room.rent %>円
</p>
<p>
  <strong>住所</strong>
  <%= @room.address %>
</p>
<p>
  <strong>築年数：</strong>
  <%= @room.age %>年
</p>
<p>
  <strong>備考：</strong>
  <%= @room.comment %>
</p>
<hr>
<!-- 以下、最寄り駅表示 -->
<% counter = 0 %>
<% @stations.each do |station| %>
  <% if station.room_id == @room.id && station.station_name != "" %>
    <% counter +=1 %>
      <strong>最寄り駅<%= counter %></strong>
    <p>
      <strong>路線名</strong>
      <%= station.line_name %>
    </p>
    <p>
      <strong>駅名</strong>
      <%= station.station_name %>
    </p>
    <p>
      <strong>徒歩分数</strong>
      <%= station.walk_time %>分
    </P>
      <br>
  <% end %>
<% end %>
<!-- ここまで -->
<%= link_to '編集', edit_room_path(@room) %> |
