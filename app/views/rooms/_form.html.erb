<%= form_with(model: room, local: true) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "物件名" %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label "賃料" %>
    <p><%= form.number_field :rent %>円</p>
  </div>
  <div class="field">
    <%= form.label "住所" %>
    <%= form.text_field :address %>
  </div>
  <div class="field">
    <%= form.label "築年数" %>
    <p><%= form.number_field :age %>年</p>
  </div>
  <div class="field">
    <%= form.label "備考" %>
    <%= form.text_area :comment %>
  </div>
  <hr>
  <% counter = 0 %>
  <%= form.fields_for :stations do |g| %>
    <% counter += 1 %>
    <h3>最寄り駅<%= counter %></h3>
    <div class="field">
      <%= g.label "路線名" %>
      <%= g.text_field :line_name %>
    </div>

    <div class="field">
      <%= g.label "駅名" %>
      <%= g.text_field :station_name %>
    </div>

    <div class="field">
      <%= g.label "徒歩分数" %>
      <p><%= g.number_field :walk_time %>分</p>
    </div>
  <% end %>
  
  <div class="actions">
    <%= form.submit "登録する" %>
  </div>
<% end %>
